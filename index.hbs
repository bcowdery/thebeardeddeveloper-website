{{!< default}}

<header role="banner">
    <div class="social-links">
        <a href="http://github.com/bcowdery/"><i class="fa fa-github fa-2x"></i></a>
        <a href="http://ca.linkedin.com/in/briancowdery/"><i class="fa fa-linkedin-square fa-2x"></i></a>
    </div>

    <div class="inner">
        <div class="blog-title">
            <div class="ribbon">
                <div class="ribbon-content"><h1>The Bearded Developer <small>co</small></h1></div>
            </div>
        </div>
    </div>
</header>

<div class="main">
    <div class="container">

    {{#foreach posts}}

        <article class="{{post_class}}">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>

                    <section class="post-content">
                        <p>{{excerpt}}&hellip;</p>
                    </section>
                </div>
            </div>

            <div class="post-footer">
                <div class="row">
                    <div class="col-md-12">
                        {{#if tags}}
                        <section class="tags">
                            <ul class="tag-list">
                                <li><i class="fa fa-tags"></i></li>
                                {{#foreach tags}}
                                <li>{{name}}</li>
                                {{/foreach}}
                            </ul>                    
                        </section>
                        {{#/if}}
                    </div>
                </div> <!-- end .row -->
            </div> <!-- end .post-footer -->
        </article> <!-- end article -->
    {{/foreach}}

    {{pagination}}

    </div> <!-- end .container -->
</div> <!-- end .main -->
